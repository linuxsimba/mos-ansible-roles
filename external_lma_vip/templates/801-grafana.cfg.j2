listen grafana
  bind {{ ansible_local.external_vip.ip }}:{{ grafana_port }}
  balance  source
  mode  http
  option  httplog
  option  dontlog-normal
{% for entry in groups.lma %}
  server {{ hostvars[entry].ansible_hostname }} {{ hostvars[entry].ansible_br_mgmt.ipv4.address }}:8000 check
{% endfor %}
